 *
 * let home_directory_path =
 *   Sys.getenv "HOME"
 * ;;
 * 
 * let user_ocamlinit_path =
 *   List.fold_left Filename.concat home_directory_path [".config"; "ocaml"; ".ocamlinit"]
 * ;;
 * 
 * Topdirs.dir_use Format.std_formatter user_ocamlinit_path;;
*)

